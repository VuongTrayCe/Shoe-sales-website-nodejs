mixin product_item(link,name,price,priceNew,discountPercentage,id)
    .col-4
        .nav__products
            img.product-img(src=link, path =`/products/detail/${id}`,alt='')
            h2.product-title #{name}
            if discountPercentage != 0
                .discountPercentage -#{discountPercentage}%
            div.price
                if discountPercentage != 0 
                    span.priceOrgirinal.priceDiscountPercentage $#{price}
                    span.priceNew $#{priceNew}
                else 
                    span.priceOrgirinal $#{price}
            .add-cart Add ToCart

