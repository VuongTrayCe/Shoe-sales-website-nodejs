                    ul.align-items-center.nav__list
                        li.nav__item
                            a(href='/')  Home 
                        li.nav__item
                            a(href='/products') Products
                        li.nav__item
                            a(href='#') About us
                        li.nav__item
                            a(href='#') Contact
                nav.header-bottom-infor__item.home-cart
                    ul.align-items-center.d-flex.justify-content-center.nav__list
                        li.menu-search.nav__item
                            input.input-search(type='text' placeholder='Bạn tìm kiếm gì?')
                            i.fa-solid.fa-magnifying-glass.btn-search
                        li.menu-cart.nav__item
                            span
                            i.fa-solid.fa-cart-shopping
                            span 1
                        li.menu-list.nav__item
                            button
                                i.fa-solid.fa-bars